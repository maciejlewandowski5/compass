<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white">

    <TextView
        android:id="@+id/textView"
        style="@style/header1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_huge"
        android:text="@string/pointing_to_location"
        android:textAlignment="center"
        android:layout_marginBottom="@dimen/margin_medium"
        app:layout_constraintBottom_toTopOf="@+id/gps_coordinates_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/comapss_back_face"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back_comapss_face" />

    <ImageView
        android:id="@+id/location_pointer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/comapss_back_face"
        app:layout_constraintEnd_toEndOf="@+id/comapss_back_face"
        app:layout_constraintStart_toStartOf="@+id/comapss_back_face"
        app:layout_constraintTop_toTopOf="@+id/comapss_back_face"
        app:srcCompat="@drawable/comapss_location_pointer" />

    <ImageView
        android:id="@+id/compass_front_face"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/comapss_back_face"
        app:layout_constraintEnd_toEndOf="@+id/comapss_back_face"
        app:layout_constraintStart_toStartOf="@+id/comapss_back_face"
        app:layout_constraintTop_toTopOf="@+id/comapss_back_face"
        app:srcCompat="@drawable/front_compass_face" />

    <ImageView
        android:id="@+id/compass_pin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/compass_front_face"
        app:layout_constraintEnd_toEndOf="@+id/compass_front_face"
        app:layout_constraintStart_toStartOf="@+id/compass_front_face"
        app:layout_constraintTop_toTopOf="@+id/compass_front_face"
        app:srcCompat="@drawable/pin" />

    <LinearLayout
        android:id="@+id/gps_coordinates_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/comapss_back_face"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="@dimen/margin_very_huge">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_medium"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                style="@style/small_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/latitude"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/latitude"
                style="@style/medium_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_medium"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                style="@style/small_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/longitude"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/longitude"
                style="@style/medium_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textAlignment="center" />
        </LinearLayout>
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/location_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_very_huge"
        android:layout_marginEnd="@dimen/margin_huge"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/location_icon" />


</androidx.constraintlayout.widget.ConstraintLayout>